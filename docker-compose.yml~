version: '3.3'

networks:
  auth-network:
    driver: bridge

volumes:
  auth-mysql-volume:

services:
  mysql:
    image: mysql:8
    command: --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_DATABASE: auth_test
      MYSQL_USER: myuser
      MYSQL_PASSWORD: mypassword
      MYSQL_ROOT_PASSWORD:
      MYSQL_ALLOW_EMPTY_PASSWORD: "true"
    ports:
      - "3307:3306"
    networks:
      - auth-network
    volumes:
      - aw-mysql-volume:/var/lib/mysql
